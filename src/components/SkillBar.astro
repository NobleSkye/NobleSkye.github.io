---
interface Props {
  title: string;
  skills: Array<{
    name: string;
    percentage: number;
  }>;
}

const { title, skills } = Astro.props;
---

<div class="mb-8">
  <h2 class="text-primary text-xl font-semibold mb-6">{title}</h2>
  <div class="space-y-4">
    {skills.map((skill) => (
      <div>
        <div class="flex justify-between items-center mb-2">
          <span class="text-primary font-medium">{skill.name}</span>
          <span class="text-secondary text-sm">{skill.percentage}%</span>
        </div>
        <div class="w-full bg-dark-lighter rounded-full h-2">
          <div 
            class="bg-gradient-to-r from-primary to-secondary h-2 rounded-full transition-all duration-1000 ease-out"
            style={`width: ${skill.percentage}%`}
          ></div>
        </div>
      </div>
    ))}
  </div>
</div>
