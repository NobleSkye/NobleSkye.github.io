---
interface Props {
  title: string;
  items: Array<{
    year: string;
    institution: string;
    degree: string;
    description: string;
  }>;
}

const { title, items } = Astro.props;
---

<div class="mb-8">
  <h2 class="text-primary text-xl font-semibold mb-6">{title}</h2>
  <div class="space-y-6">
    {items.map((item) => (
      <div class="flex items-start space-x-4">
        <div class="flex-shrink-0">
          <div class="w-12 h-12 bg-primary rounded-full flex items-center justify-center">
            <div class="w-3 h-3 bg-dark rounded-full"></div>
          </div>
        </div>
        <div class="flex-1">
          <div class="flex items-center space-x-3 mb-2">
            <span class="text-secondary text-sm">{item.year}</span>
            <h3 class="text-primary font-semibold">{item.degree}</h3>
          </div>
          <p class="text-secondary text-sm mb-1">{item.institution}</p>
          <p class="text-accent text-sm">{item.description}</p>
        </div>
      </div>
    ))}
  </div>
</div>
