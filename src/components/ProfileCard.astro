---
interface Props {
  name: string;
  title: string;
  image: string;
  skyenetUrl?: string;
  blueskyUrl?: string;
  githubUrl?: string;
  resumeUrl?: string;
}

const { name, title, image, skyenetUrl, blueskyUrl, githubUrl, resumeUrl } = Astro.props;
---

<div class="bg-dark-lighter rounded-3xl p-8 w-full max-w-md mx-auto">
  <!-- Profile Section -->
  <div class="text-center mb-8">
    <div class="w-32 h-32 mx-auto mb-6 rounded-full overflow-hidden border-4 border-primary shadow-lg">
      <img src={image} alt={name} class="w-full h-full object-cover" />
    </div>
    <h1 class="text-primary text-2xl font-bold mb-2">{name}</h1>
    <p class="text-accent text-lg">{title}</p>
    
    <!-- Social Links -->
    <div class="flex justify-center space-x-4 mt-4">
      {skyenetUrl && (
        <a href={skyenetUrl} class="text-primary hover:text-secondary transition-colors">
          <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 576 512">
