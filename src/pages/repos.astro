import Layout from '../layouts/Layout.astro';

// Put the repos you want to force to the top here (any owner works).
const priorityRepos = [
    { owner: 'NobleSkye', repo: 'NobleSkye.github.io' },
    { owner: 'NobleSkye', repo: 'SkyeNetwork' },
    { owner: 'NobleSkye', repo: 'pronouns.site' },
    { owner: 'NobleSkye', repo: 'blahaj.bio' },
    { owner: 'skyenetmc', repo: 'infra' },
    { owner: 'skyenetmc', repo: 'skyeblock' },
    { owner: 'skyenetmc', repo: 'skyenetv' }, 
    { owner: 'skyenetmc', repo: 'skyenetp' },
    { owner: 'skyenetmc', repo: 'skyenetc' },
];

// Owners to pull pinned + recent repos from. Add more handles as needed.
const owners = ['NobleSkye', 'skyenetmc'];

const headers = { 'User-Agent': 'astro-repo-list' };
const clean = (s) => (typeof s === 'string' ? s.trim() : s ?? '');

/**
 * @typedef {{
 *  id: string;
 *  name: string;
 *  owner: string;
 *  description: string;
 *  language: string;
 *  stars: number;
 *  updatedAt: string;
 *  url: string;
 *  source: 'priority' | 'pinned' | 'recent';
 * }} Repo
 */

async function fetchJSON(url) {
  const res = await fetch(url, { headers });
  if (!res.ok) {
    const err = new Error(`Failed ${url}: ${res.status}`);
    // Attach status so callers can gracefully handle 404s.
    // @ts-ignore
    err.status = res.status;
    throw err;
  }
  return res.json();
}

function normalizeGithubRepo(data, source) {
  const owner = clean(data.owner?.login || data.owner || 'unknown');
  const name = clean(data.name);
  return {
    id: `${owner}/${name}`,
    name,
    owner,
    description: clean(data.description) || 'No description provided.',
    language: clean(data.language) || 'Other',
    stars: data.stargazers_count ?? 0,
    updatedAt: data.pushed_at || data.updated_at || '',
    url: data.html_url,
    source,
  };
}

async function fetchRepoDetails(owner, repo) {
  try {
    const data = await fetchJSON(`https://api.github.com/repos/${owner}/${repo}`);
    return normalizeGithubRepo(data, 'priority');
  } catch (err) {
    // Ignore missing repos quietly; surface other errors for visibility.
    // @ts-ignore
    if (err?.status !== 404) console.error(err);
    return null;
  }
}

async function fetchPinned(owner) {
  try {
    const list = await fetchJSON(`https://gh-pinned-repos.egoist.dev/?username=${owner}`);
    if (!Array.isArray(list)) return [];
    return list.map((item) => ({
      id: `${clean(owner)}/${clean(item.repo)}`,
      name: clean(item.repo),
      owner: clean(owner),
      description: clean(item.description) || 'Pinned project',
      language: clean(item.language) || 'Other',
      stars: item.stars ?? 0,
      updatedAt: item.pushed || item.updated_at || '',
      url: item.link || `https://github.com/${clean(owner)}/${clean(item.repo)}`,
      source: 'pinned',
    }));
  } catch (err) {
    console.error(err);
    return [];
  }
}

async function fetchRecent(owner) {
  try {
    const repos = await fetchJSON(`https://api.github.com/users/${owner}/repos?per_page=100&sort=updated`);
    if (!Array.isArray(repos)) return [];
    return repos.map((r) => normalizeGithubRepo(r, 'recent'));
  } catch (err) {
    console.error(err);
    return [];
  }
}

const priorityDetails = (await Promise.all(priorityRepos.map((r) => fetchRepoDetails(r.owner, r.repo)))).filter(Boolean);
const pinnedLists = (await Promise.all(owners.map((o) => fetchPinned(o)))).flat();
const recentLists = (await Promise.all(owners.map((o) => fetchRecent(o)))).flat();
const recentSorted = [...recentLists].sort((a, b) => new Date(b.updatedAt).getTime() - new Date(a.updatedAt).getTime());

const ordered = [];
const seen = new Set();
const MAX_TOTAL = 20;
const maxAuto = Math.max(0, MAX_TOTAL - priorityDetails.length);
let autoAdded = 0;

for (const repo of priorityDetails) {
  if (seen.has(repo.id)) continue;
  seen.add(repo.id);
  ordered.push(repo);
}
for (const repo of pinnedLists) {
  if (autoAdded >= maxAuto) break;
  if (seen.has(repo.id)) continue;
  seen.add(repo.id);
  ordered.push(repo);
  autoAdded++;
}
for (const repo of recentSorted) {
  if (autoAdded >= maxAuto) break;
  if (seen.has(repo.id)) continue;
  seen.add(repo.id);
  ordered.push(repo);
  autoAdded++;
}
