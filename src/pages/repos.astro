<Layout title="Repos - Skylar Steuber">
  <main id="top" class="min-h-screen relative">
    <div class="hidden lg:flex fixed right-6 top-1/2 -translate-y-1/2 z-20 flex-col gap-3" role="navigation" aria-label="Page tabs">
      <a
        href="/"
        class="px-4 py-2 text-sm font-semibold rounded-full border bg-dark-lighter text-gray-300 border-gray-800 hover:border-primary/50 focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2 focus:ring-offset-dark"
      >
        About
      </a>
      <a
        href="/projects"
        class="px-4 py-2 text-sm font-semibold rounded-full border bg-dark-lighter text-gray-300 border-gray-800 hover:border-primary/50 focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2 focus:ring-offset-dark"
      >
        Projects
      </a>
      <a
        href="#top"
        class="px-4 py-2 text-sm font-semibold rounded-full border bg-primary text-dark border-primary shadow-lg focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2 focus:ring-offset-dark"
        aria-current="page"
      >
        Repos
      </a>
    </div>

    <div class="relative z-10 min-h-screen flex items-center justify-center p-4">
      <div class="w-full max-w-6xl mx-auto">
        <div class="bg-dark rounded-3xl p-8 text-gray-200">
          <div class="flex items-center justify-between flex-wrap gap-3 mb-6">
            <div>
              <p class="text-sm text-gray-400 uppercase tracking-wide">Code</p>
              <h1 class="text-3xl font-bold text-gray-100">Repos<span class="text-primary">.</span></h1>
              <p class="text-sm text-gray-400 mt-1">Priority list → pinned → most recently active.</p>
            </div>
            <a
              href="https://github.com/NobleSkye"
              class="inline-flex items-center gap-2 px-4 py-2 rounded-full border border-gray-700 text-gray-200 bg-dark-lighter hover:border-primary/60 focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2 focus:ring-offset-dark"
              target="_blank"
              rel="noreferrer"
            >
              View GitHub ↗
            </a>
          </div>

          {ordered.length === 0 ? (
            <div class="bg-dark-lighter/70 border border-gray-800 rounded-2xl p-5 text-sm text-gray-300">
              No repositories could be loaded. You might be offline or rate-limited; refresh and try again.
            </div>
          ) : (
            <div class="space-y-5">
              {ordered.map((repo) => (
                <div class="bg-dark-lighter/70 border border-gray-800 rounded-2xl p-5 shadow-inner">
                  <div class="flex items-center justify-between gap-3 flex-wrap">
                    <div>
                      <p class="text-xs uppercase tracking-wide text-gray-400">{repo.owner}</p>
                      <h2 class="text-xl font-semibold text-gray-100">{repo.name}</h2>
                    </div>
                    <div class="flex items-center gap-2 text-xs">
                      <span class="px-3 py-1 rounded-full border border-gray-700 text-gray-300 bg-gray-900/60">{repo.source}</span>
                      <span class="px-3 py-1 rounded-full border border-gray-700 text-gray-300 bg-gray-900/60">{repo.language}</span>
                      <span class="px-3 py-1 rounded-full border border-gray-700 text-gray-300 bg-gray-900/60">★ {repo.stars}</span>
                    </div>
                  </div>
                  <p class="text-gray-300 text-sm mt-3 leading-relaxed">{repo.description}</p>
                  <div class="flex items-center justify-between flex-wrap gap-3 mt-4 text-sm text-gray-400">
                    <span>Updated {repo.updatedAt ? new Date(repo.updatedAt).toLocaleDateString(undefined, { month: 'short', day: 'numeric', year: 'numeric' }) : 'recently'}</span>
                    <div class="flex items-center gap-2">
                      <a
                        href={repo.url}
                        class="inline-flex items-center gap-2 px-4 py-2 rounded-full border border-gray-700 text-gray-200 bg-dark hover:border-primary/60 focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2 focus:ring-offset-dark"
                        target="_blank"
                        rel="noreferrer"
                      >
                        GitHub ↗
                      </a>
                    </div>
                  </div>
                </div>
              ))}
            </div>
          )}
        </div>
      </div>
    </div>
  </main>
</Layout>
